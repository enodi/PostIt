{
  "name": "postit",
  "version": "1.0.0",
  "description": "A JavaScript Application that allows users communicate with each other within a group",
  "main": "index.js",
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./jestSetup.js"
    ],
    "modulePathIgnorePatterns": [
      "./client/src/assets/",
      "./client/src/utils/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/assetsTransformer.js"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "scripts": {
    "start": "npm run build && babel-node index.js",
    "build": "webpack",
    "test": "NODE_ENV=test mocha server/test/*.test.js --compilers js:babel-register --timeout=25000",
    "client:test": "node_modules/.bin/jest ./client/__tests__/**/*.test.js --coverage --collectCoverageFrom=client/src/**/*.{js,jsx}",
    "client:coverage": "node_modules/.bin/jest --coverage",
    "start:dev": "nodemon --watch server --exec babel-node index.js",
    "coverage": "NODE_ENV=test node_modules/.bin/babel-node node_modules/.bin/babel-istanbul cover node_modules/mocha/bin/_mocha server/test/*.test.js",
    "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "showcoverage": "open coverage/lcov-report/index.html"
  },
  "author": "Enodi Audu",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.4",
    "dotenv": "^4.0.0",
    "expect": "^21.0.2",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^21.2.1",
    "jquery": "^3.2.1",
    "jsdom": "^11.3.0",
    "jsonwebtoken": "^7.4.3",
    "jsx-loader": "^0.13.2",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.4",
    "materialize-css": "^0.100.2",
    "morgan": "^1.8.2",
    "node-sass": "^4.5.3",
    "nodemailer": "^4.3.1",
    "pg": "^4.3.0",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.2",
    "react-dom": "^15.6.1",
    "react-notify-toast": "^0.3.2",
    "react-paginate": "^5.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^3.0.5",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-form": "^7.1.2",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "sequelize": "^3.2.0",
    "style-loader": "^0.18.2",
    "toastr": "^2.1.2",
    "ui-notifier": "^0.1.2",
    "validatorjs": "^3.13.3",
    "webpack": "^3.3.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-istanbul": "^0.12.2",
    "babel-jest": "^21.2.0",
    "chai": "^4.1.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.13.1",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.3.0",
    "sequelize-cli": "^3.0.0",
    "style-loader": "^0.18.2",
    "supertest": "^3.0.0",
    "webpack-dev-server": "^2.6.1"
  }
}
